def numeros_repetidos(lista):
    sin_repetir = 0
    repetidos = 0
    cont = []

    for numero in lista:
        if lista.count(numero) > 1 and numero not in cont:
            repetidos += lista.count(numero)
            cont.append(numero)
        elif numero not in cont:
            sin_repetir += 1

    return (sin_repetir, repetidos)

listaN = [1, 3, 1, 4, 5, 3, 7]
resultadoN = numeros_repetidos(listaN)
print(resultadoN)
